CREATE USER k1111 IDENTIFIED BY 1234;


GRANT CONNECT, RESOURCE TO k1111;


ALTER USER k1111 DEFAULT TABLESPACE USERS QUOTA UNLIMITED ON USERS;

COMMIT;




CREATE TABLE TUSER(
    USERID       VARCHAR2(45)   PRIMARY KEY
,   PASSWD       VARCHAR2(45)   NOT NULL
,   USERNAME     VARCHAR2(45)   NOT NULL
,   PHONENUM     VARCHAR2(16)
,   POST         VARCHAR2(1000) NOT NULL -- DAUM POST API
,   BIRTH        VARCHAR2(300) 
,   INDATE       DATE           DEFAULT SYSDATE
,   GENDER       VARCHAR(3)     NOT NULL -- ('남', '여', '알리지 않음')
,   INTRO        VARCHAR2(1000) 
,   USERTYPE     VARCHAR2(3)    NOT NULL -- 0: 관리자, 1: 일반회원
)
CREATE TABLE BOARD(
    IDX          NUMBER(5,0)    PRIMARY KEY
,   MENU_ID	     VARCHAR2(6)    NOT NULL REFERENCES MENU(MENU_ID) -- MENU TABLE의 MENU_ID 참조
,   TITLE	     VARCHAR2(300)
,   CONT	     VARCHAR2(4000)
,   WRITER	     VARCHAR2(50)
,   STATUS       VARCHAR2(3) -- 상태 / 0:일반글 / 1:삭제된 글. 상태가 1인 경우 화면에서 안보이지만 데이터베이스에는 남기도록
,   CREATE_DATE	     DATE       DEFAULT SYSDATE
,   UPDATE_DATE      DATE       DEFAULT SYSDATE
,   DELETE_DATE      DATE       DEFAULT SYSDATE
)

CREATE TABLE MENU(
    MENU_ID	     VARCHAR2(6)    PRIMARY KEY
,   MENU_NAME  	 VARCHAR2(120)
,   MENU_SEQ	 NUMBER(5,0)
)
CREATE TABLE RECOMM(
    COMCONT      VARCHAR2(3000)
,   USERID       VARCHAR2(45)   REFERENCES TUSER(USERID)
,   MENU_ID      VARCHAR2(6)    REFERENCES MENU(MENU_ID)
,   IDX          NUMBER(5, 0)   REFERENCES BOARD(IDX)
,   INDATE       DATE           DEFAULT SYSDATE
)